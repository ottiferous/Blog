<h1>Listing Posts</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th></th>
    <th></th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%= link_to post.title, post %></td>
      <td><%= post.text %></td>
      <td><%= link_to 'Edit', edit_post_path(post) %></td>
      <td><%= link_to 'Delete',
        post_path(post),
        method: :delete,
        data: { confirm: 'You sure?' } %>
      </td>
    </tr>
  <% end %>
</table>
<br>
<h3><%= link_to 'New Post', new_post_path %></h3>
